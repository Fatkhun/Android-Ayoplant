<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.allfeature.AllFeature">

    <LinearLayout
        android:id="@+id/llReminder"
        style="@style/settings_item_layout"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_reminder_header"
            style="@style/settings_header"
            android:text="@string/sett_reminder_header_factor" />

        <TextView
            android:id="@+id/tv_reminder_desc"
            style="@style/settings_details"
            android:paddingBottom="@dimen/items_inbetween_space"
            android:paddingTop="@dimen/items_top_padding"
            android:text="@string/sett_reminder_desc" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/activity_vertical_margin">

            <TextView
                android:id="@+id/tv_reminder_label1"
                style="@style/settings_sub_header"
                android:text="@string/sett_reminder_label_temp" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/timerSwitch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:checked="false"
                android:gravity="center_vertical"
                android:theme="@style/switch_theme" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/activity_vertical_margin">

            <TextView
                android:id="@+id/tv_reminder_label2"
                style="@style/settings_sub_header"
                android:text="@string/sett_reminder_label_humadity" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/timerSwitch2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:checked="false"
                android:gravity="center_vertical"
                android:theme="@style/switch_theme" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/textColorSecondary" />

        <TextView
            android:id="@+id/tv_reminder_header_plant"
            style="@style/settings_header"
            android:text="@string/sett_reminder_header_plant" />
        <TextView
            android:id="@+id/tv_reminder_desc_pant"
            style="@style/settings_details"
            android:paddingBottom="@dimen/items_inbetween_space"
            android:paddingTop="@dimen/items_top_padding"
            android:text="@string/sett_reminder_desc_plant" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/textColorSecondary" />

        <TextView
            android:id="@+id/tv_reminder_header_time"
            style="@style/settings_header"
            android:text="@string/sett_reminder_header_time" />
        <TextView
            android:id="@+id/tv_reminder_desc_time"
            style="@style/settings_details"
            android:paddingBottom="@dimen/items_inbetween_space"
            android:paddingTop="@dimen/items_top_padding"
            android:text="@string/sett_reminder_desc_time" />

        <Button
            android:id="@+id/setalarm"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:text="Alarm"
            android:layout_gravity="center"
            android:padding="10sp"
            android:layout_marginTop="10sp"
            android:background="#ffffff"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:visibility="visible"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>


    </LinearLayout>

</LinearLayout>
